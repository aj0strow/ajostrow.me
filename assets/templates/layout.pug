doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title= title
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Hind|Ubuntu:500|Droid+Sans+Mono")
    link(rel="stylesheet" href=digest('layout.css'))
    link(rel="icon" href="/favicon.png" type="image/png")    
    meta(name="description" content="Personal blog, programming articles, projects.")
    script(defer src=digest('boot.js'))
    script(async src="https://www.googletagmanager.com/gtag/js?id=G-V6XRV2N4EL")
  body
    .container-fluid
      .row
        .col-md-3.text-center.hidden-sm.hidden-xs
          .row
            .col-md-12.me
              a(href="/")
                img(src=digest('me-2023.jpg') alt="AJ Ostrow").img-circle
          .row
            .col-md-12
              .links
                a(href="https://www.linkedin.com/in/ajostrow/" target="_blank" rel="noopener").social.linkedin
                  include ../icons/linkedin.svg
                a(href="https://github.com/aj0strow" target="_blank" rel="noopener").social.github
                  include ../icons/github.svg
                a(href="https://stackoverflow.com/users/824377/ajcodez" target="_blank" rel="noopener").social.stackoverflow
                  include ../icons/stackoverflow.svg
                a(href="https://twitter.com/aj0strow" target="_blank" rel="noopener").social.twitter
                  include ../icons/twitter.svg
          .row
            hr.col-md-9.col-md-offset-1
          .row
            .col-md-12.text-left.recent-articles
              ul.list-unstyled
                for article in recentArticles
                  li
                    a(href=`/articles/${article.slug}`)= article.title
              div.article-index-link
                a(href="/articles")
                  span All Articles
                  span.small &nbsp;&#x276F;
        .col-md-3.hidden-md.hidden-lg
          .nav
            a(href="/").nav-link About
            a(href="/articles").nav-link Articles
        .col-md-8.scroll            
          .layout
            block page
    script.
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-V6XRV2N4EL');
